<header class="navbar navbar-inverse">
  <div class="container">
    <%= link_to "caffeinejag esl app", '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path, class: "btn btn-lg btn-primary" %></li>
        <% if signed_in? %>
          <li><%= link_to "Teachers", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
             </a>
               <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_teacher %></li>
                  <li><%= link_to "Settings", '#' %></li>
                  <li class="divider"></li>
                  <li>
               <%= link_to "Sign out", sign_out_path, method: :delete %>
             </li>
           </ul>
         </li>
        <% else %>
         <li><%= link_to "Sign in", sign_in_path, class: "btn btn-lg btn-primary" %></li>
        <% end %>
        <li><%= link_to "Sign up", sign_up_path, class: "btn btn-lg btn-primary" %></li>
      </ul>
    </nav>
  </div>
</header>


