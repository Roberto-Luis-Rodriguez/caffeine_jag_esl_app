<% provide(:title, @teacher.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="teacher_info">
      <h1>
        <%= gravatar_for @teacher %>
        <%= @teacher.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @teacher.lessonplans.any? %>
      <h3>Lessonplans (<%= @teacher.lessonplans.count %>)</h3>
      <ol class="lessonplans">
        <%= render @lessonplans %>
      </ol>
      <%= will_paginate @lessonplans %>
    <% end %>
  </div>
  
</div>
