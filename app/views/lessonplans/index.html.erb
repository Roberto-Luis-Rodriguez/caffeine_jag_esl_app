<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New Lessonplan", new_lessonplan_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>

   <tbody>
      <% @lessonplans.each do |lessonplan| %>

         <tr>
            <td><%= lessonplan.name %></td>
            <td><%= link_to "Download Lessonplan", lessonplan.attachment_url %></td>
            <td><%= button_to "Delete",  lessonplan, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{lessonplan.name}?" %></td>
         </tr>

      <% end %>
   </tbody>

</table>
